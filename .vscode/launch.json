{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "browser-preview",
      "request": "attach",
      "name": "Browser Preview: Attach"
  },    
    {
      "type": "node",
      "request": "attach",
      "name": "Server",
      "restart": true,
      "protocol": "inspector",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "port": 9227,
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Lambda",
      "restart": true,
      "protocol": "inspector",
      "localRoot": "${workspaceFolder}/imageResizer/src",
      "remoteRoot": "/var/task",
      "port": 5858,
      "sourceMaps": true
    },
    {
      "name": "Client",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "url": "http://*carpe*",
      "webRoot": "${workspaceFolder}/client",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Server/Client",
      "configurations": ["Server", "Client"]
    }
  ]
}